<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.newbeeMall.dao.GoodsCategoryMapper">

    <resultMap id="BaseResultMap" type="com.study.newbeeMall.entity.GoodsCategory">
            <id property="categoryId" column="category_id" jdbcType="BIGINT"/>
            <result property="categoryLevel" column="category_level" jdbcType="TINYINT"/>
            <result property="parentId" column="parent_id" jdbcType="BIGINT"/>
            <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
            <result property="categoryRank" column="category_rank" jdbcType="INTEGER"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="createUser" column="create_user" jdbcType="INTEGER"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="updateUser" column="update_user" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        category_id,category_level,parent_id,
        category_name,category_rank,is_deleted,
        create_time,create_user,update_time,
        update_user
    </sql>
    <select id="selectByLevelAndParentIdsAndNumber" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from goods_category
        where parent_id in
        <foreach collection="parentIds" item="parentId" open="(" separator="," close=")">
            #{parentId,jdbcType=BIGINT}
        </foreach>
        and is_deleted = 0 and category_level = #{categoryLevel,jdbcType=TINYINT}
        order by category_rank desc
        <if test="number>0">
            limit #{number}
        </if>
    </select>
</mapper>
